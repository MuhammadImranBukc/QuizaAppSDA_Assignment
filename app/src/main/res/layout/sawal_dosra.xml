<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/txt_color"
    android:orientation="vertical"
    tools:context=".DosraSawal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/bg"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="@string/Naam"
        android:textColor="@color/txt_color"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:text="@string/dosra_sawal"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/Group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="start">

        <RadioButton
            android:id="@+id/A21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Imran Khan"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/A22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Nawaz Shraif"
            android:textSize="22sp" />

        <RadioButton
            android:id="@+id/A23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Bilawal Bhutto"
            android:textSize="22sp" />
    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/nextbtn"
        android:onClick="nextA2"
        android:padding="10dp"
        android:text="@string/next"
        android:textSize="24sp" />


</LinearLayout>